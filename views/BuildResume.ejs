<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>Resume Dashboard</title>
  <link rel="stylesheet" href="/EJS.css" />


</head>

<body>

  <!-- Navbar -->
  <nav>
    <div class="logo">ResumeBuilder</div>
    <div class="auth-buttons">
      <button class="login">Login</button>
      <button class="logout">Logout</button>
    </div>
  </nav>

  <!-- Create New Button -->
  <!-- Create New Button -->
  <div class="create-btn">
    <a href="/CreateNew">
      <button type="button">+ Create New Resume</button>
    </a>
  </div>


  <!-- Resume List -->
  <table border="1" cellpadding="8" cellspacing="0">
    <tr>
      <th>Name</th>
      <th>Tag</th>
      <th>Type</th>
      <th>Created</th>
      <th>Updated</th>
      <th>Actions</th>
    </tr>
    <% resumes.forEach(resume=> { %>
      <tr>
        <td>
          <%= resume.name || "Untitled" %>
        </td>
        <td>
          <%= resume.tag || "Add label" %>
        </td>
        <td>Resume</td>
        <td>
          <%= resume.createdAt ? resume.createdAt.toDateString() : 'N/A' %>
        </td>
        <td>
          <%= resume.updatedAt ? resume.updatedAt.toDateString() : 'N/A' %>
        </td>
        <td>
          <a href="/resume/<%= resume._id %>/view" target="_blank">View</a>
          <a href="/resume/<%= resume._id %>/download">Download</a>
          <form action="/resume/<%= resume._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
      <% }) %>
  </table>


</body>

</html>